<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="550"
        Width="900"
        MinHeight="450"
        MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Background="Crimson" Orientation="Horizontal">
            <Image Source="/Resources/AppLogo.png" HorizontalAlignment="Left" Height="50" Margin="2,2" />
            <Button Style="{StaticResource ButtonStule}"  Margin="10,0" Click="btnGoBackPage_Click">Назад</Button>
        </StackPanel>

        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" Grid.Row="1" Background="#FF6B3434" Foreground="White"/>
    </Grid>
</Window>
