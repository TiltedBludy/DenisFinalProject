<Page x:Class="WpfApp6.Pages.StartAppPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp6.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StartAppPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
            <TextBlock Style="{StaticResource TextBlockStyle}">Укажите логин</TextBlock>
            <TextBox Style="{StaticResource TextBoxStyle}" x:Name="txbLogin"></TextBox>

            <TextBlock Style="{StaticResource TextBlockStyle}" Margin="0,5,0,0">Укажите пароль</TextBlock>
            <PasswordBox FontFamily="Ravie" FontSize="17" x:Name="passwordBox"></PasswordBox>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                
                <Button Style="{StaticResource ButtonStule}" Click="btnLogin_Click" Margin="10,10">Войти</Button>
                <Button Style="{StaticResource ButtonStule}" Click="btnGuest_Click" Margin="10,10" Width="150">Войти как гость</Button>
                
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
